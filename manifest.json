{
    "manifest_version": 2,

    "name": "2016 Elections to Game Of Thrones",
    "description": "Tired of news about the election? Instead read about something a little more spicy and relevant to your life: Game of Thrones.",
    "version": "1.0",
    "icons":
   {
      "128": "icon.png",
      "16": "icon.png",
      "48": "icon.png"
   },

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [ {
        "js": [ "jquery-1.11.3.min.js", 
                "changeCandidates.js",
                "changeLocations.js",
                "changeImages.js"  ],
        "matches": [ 
            "https://www.washingtonpost.com/*", "https://www.washingtonpost.com/*",
            "*://www.nytimes.com/*",
            "*://www.cnn.com/*",
            "*://www.foxnews.com/*",
            "*://www.politico.com/*",
            "*://www.huffingtonpost.com/*"
        ]    
    } ],

    "background": {
        "scripts": ["popup.js", "alert.js"],
        "persistent": false
  },

    "permissions": [
        "tabs",
        "http://*/*"
    ]
}
