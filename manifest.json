{
    "manifest_version": 2,

    "name": "2016 Elections to Game Of Thrones",
    "description": "Tired of news about the election? Instead read about something a little more spicy and relevant to your life: Game of Thrones.",
    "version": "1.0",
    "icons":
   {
      "128": "icon.png",
      "16": "icon.png",
      "48": "icon.png"
   },

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [ {
        "js": [ "jquery-1.11.3.min.js", 
                "characters.js",
                "locations.js",
                "images.js"  ],
        "matches": [ "http://*/*", "https://*/*" ]    
    } ],

    "background": {
        "scripts": ["popup.js",
            "alert.js"],
        "persistent": false
  },

    "permissions": [
        "tabs",
        "http://*/*"
    ]
}
